<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FRC_App.ReportBugPage"
             Title="Report a Bug">

    <StackLayout Padding="20">
        <Label Text="Please describe the issue you encountered:" FontSize="Large" FontAttributes="Bold" />
        <Editor x:Name="BugDescriptionEditor"
                Placeholder="Enter your bug description here"
                AutoSize="TextChanges"
                HeightRequest="150"
                Margin="0,10,0,20" />

        <Button Text="Submit Bug Report"
                BackgroundColor="#4A90E2"
                TextColor="White"
                CornerRadius="10"
                Clicked="SendBugReportAutomatically" />

        <Entry x:Name="BugDescriptionEntry" Placeholder="Describe the issue..." />

    </StackLayout>
</ContentPage>
