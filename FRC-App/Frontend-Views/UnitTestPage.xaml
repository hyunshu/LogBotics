            <Button Text="UpdatePassword" BackgroundColor="#4169E1" TextColor="White" HorizontalOptions="Fill" Clicked="OnUpdatePassword" />
            <Button Text="Empty Test 5" BackgroundColor="#4169E1" TextColor="White" HorizontalOptions="Fill" Clicked="OnEmptyTestClicked" />
