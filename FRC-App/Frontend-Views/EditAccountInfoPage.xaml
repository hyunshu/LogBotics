<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FRC_App.EditAccountInfoPage"
             Title="Edit Account Information">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            
            <!-- Username Field -->
            <Label Text="Username" FontAttributes="Bold"/>
            <Entry Placeholder="Enter your username" x:Name="usernameEntry" />

            <!-- Email Field -->
            <Label Text="Email" FontAttributes="Bold"/>
            <Entry Placeholder="Enter your email" x:Name="emailEntry" Keyboard="Email"/>

            <!-- Password Field -->
            <Label Text="Password" FontAttributes="Bold"/>
            <Entry Placeholder="Enter your password" x:Name="passwordEntry" IsPassword="True"/>

            <!-- Confirm Password Field -->
            <Label Text="Confirm Password" FontAttributes="Bold"/>
            <Entry Placeholder="Confirm your password" x:Name="confirmPasswordEntry" IsPassword="True"/>

            <!-- Save and Cancel Buttons -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="10">
                <Button Text="Save" Clicked="OnSaveButtonClicked" />
                <Button Text="Cancel" Clicked="OnCancelButtonClicked" />
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>
