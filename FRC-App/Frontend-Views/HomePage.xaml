<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="FRC_App.HomePage"
             Title="HomePage + Data Visualization">

    <ScrollView>
    <Grid Padding="10" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,Auto" BackgroundColor="#D3D3D3">

        <!-- Main visualized data area -->
        <Frame Grid.Row="1" Grid.Column="0" Padding="10" BorderColor="Black" CornerRadius="10">
            <StackLayout Spacing="10" VerticalOptions="FillAndExpand">
                <!-- Export Buttons -->
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                    <Button Text="Export JPEG" BackgroundColor="#4A4A4A" TextColor="White" Clicked="ExportToJpeg" />
                    <Button Text="Export PDF" BackgroundColor="#4A4A4A" TextColor="White" Clicked="ExportToPdf" />
                </StackLayout>

                <!-- Chart View -->
                <Label x:Name="chart1label" Text="Label"  FontSize="16" IsVisible="False" />
                <microcharts:ChartView x:Name="chartView1" IsVisible="False" HeightRequest="200" />

                <Label x:Name="chart2label" Text="Label" FontSize="16" IsVisible="False" />
                <microcharts:ChartView x:Name="chartView2" IsVisible="False" HeightRequest="200" />

                <Label x:Name="chart3label" Text="Label" FontSize="16" IsVisible="False" />
                <microcharts:ChartView x:Name="chartView3" IsVisible="False" HeightRequest="200" />

                <Label x:Name="chart4label" Text="Label" FontSize="16" IsVisible="False" />
                <microcharts:ChartView x:Name="chartView4" IsVisible="False" HeightRequest="200" />

                <Label x:Name="chart5label" Text="Label" FontSize="16" IsVisible="False" />
                <microcharts:ChartView x:Name="chartView5" IsVisible="False" HeightRequest="200" />

                <Label x:Name="chart6label" Text="Label" FontSize="16" IsVisible="False" />
                <microcharts:ChartView x:Name="chartView6" IsVisible="False" HeightRequest="200" />

            </StackLayout>
        </Frame>
      

         <!-- Drop down to choose data types from -->
        <StackLayout x:Name="TypesStack" Grid.Row="2" Grid.Column="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Padding="10" IsVisible ="False">
            <Frame BackgroundColor="#E0E0E0" BorderColor="Black" CornerRadius="5" Padding="5">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <!-- Picker for data selection -->
                    <Picker x:Name="TypesDropDown"
                            Title="Choose which data to plot" 
                            FontSize="16" 
                            TextColor="Black"
                            TitleColor="Black"
                            WidthRequest="250"
                            BackgroundColor="White" />

                    <!-- "Select" button -->
                    <Button Text="Select"
                            BackgroundColor="#4A4A4A" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="SelectDataType" />

                    <Picker x:Name="xDataDropDown"
                            IsVisible ="False"
                            Title="Select Data type for the x-axis" 
                            FontSize="16" 
                            TextColor="Black"
                            TitleColor="Black"
                            WidthRequest="250"
                            BackgroundColor="White" />

                    <Picker x:Name="yDataDropDown"
                            IsVisible ="False"
                            Title="Select Data type for the y-axis" 
                            FontSize="16" 
                            TextColor="Black"
                            TitleColor="Black"
                            WidthRequest="250"
                            BackgroundColor="White" />

                    <Button x:Name="SelectXandYDataButton"
                        IsVisible ="False"
                        Text="Create Graph"
                        BackgroundColor="#FF1B35CD" 
                        TextColor="White" 
                        CornerRadius="5"
                        Clicked="SelectXandYData" />

                </HorizontalStackLayout>
            </Frame>
        </StackLayout>

        <StackLayout x:Name="DeleteStack" Grid.Row="2" Grid.Column="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Padding="10" IsVisible ="False">
             <Frame BackgroundColor="#E0E0E0" BorderColor="Black" CornerRadius="5" Padding="5">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Picker x:Name="DeleteDropDown"
                            Title="Select plot to delete" 
                            FontSize="16" 
                            TextColor="Black"
                            TitleColor="Black"
                            WidthRequest="250"
                            BackgroundColor="White" />

                    <Button x:Name="DeletePlotButton" 
                            Text="Delete"  
                            BackgroundColor="Red" 
                            TextColor="Black" 
                            CornerRadius="5" 
                            Clicked="DeleteSelectedPlot" />
                </HorizontalStackLayout>
            </Frame>
        </StackLayout>

        <!-- Right-side button menu -->
        <StackLayout Grid.Row="1" Grid.Column="1" Padding="10" Spacing="10">
            <Button Text="Export Data" BackgroundColor="#4A4A4A" TextColor="White" CornerRadius="10" Clicked="ExportData" />
            <Button Text="Import Data" BackgroundColor="#4A4A4A" TextColor="White" CornerRadius="10" Clicked="ImportData" />
            <Button Text="Load Data" BackgroundColor="#4A4A4A" TextColor="White" CornerRadius="10" Clicked="LoadData" />
            <!--<Button Text="Raw Data" BackgroundColor="#4A4A4A" TextColor="White" CornerRadius="10" /> -->
            <!--<Button Text="Data History" BackgroundColor="#4A4A4A" TextColor="White" CornerRadius="10" /> -->
            <Button Text="Preference" BackgroundColor="#4A4A4A" TextColor="White" CornerRadius="10" Clicked="Preference" />
            <Button Text="Log Out" BackgroundColor="White" TextColor="Black" BorderColor="Black" CornerRadius="10" Clicked="LogOut" />
        
            <!-- User Information Section -->
            <StackLayout Padding="0,20,0,0" Spacing="5">
                <Label Text="Team Info"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    HorizontalOptions="Center" />

                <!-- Team Number Display -->
                <StackLayout HorizontalOptions="Center">
                    <Label Text="Team #:" FontSize="Small" />
                    <Label Text="{Binding TeamNumber}" FontSize="20" HorizontalOptions="Center" />
                </StackLayout>

                <!-- Team Name Display -->
                <StackLayout HorizontalOptions="Center">
                    <Label Text="Team Name:" FontSize="Small" />
                    <Label Text="{Binding TeamName}" FontSize="20" HorizontalOptions="Center" />
                </StackLayout>

                <!-- Add Plot Button -->
                <Button Text="Add Plot" BackgroundColor="White" TextColor="Black" CornerRadius="10" Clicked="AddPlot" />
                <Button Text="Delete Plot" BackgroundColor="White" TextColor="Black" CornerRadius="10" Clicked="DeletePlot" />

                <!--- 3 Graphical Data Display -->
                <Button Text="Line Chart" BackgroundColor="#4A4A4A" TextColor="White" CornerRadius="10" Clicked="RenderLineChart" />
                <Button Text="Point Chart" BackgroundColor="#4A4A4A" TextColor="White" CornerRadius="10" Clicked="RenderPointChart" />
                <Button Text="Radar Chart" BackgroundColor="#4A4A4A" TextColor="White" CornerRadius="10" Clicked="RenderRadarChart" />
            </StackLayout>
        </StackLayout>

         <!-- Bottom-right logo -->
        <Image Source="logbotics.png" Grid.Row="1" Grid.Column="1" HorizontalOptions="End" VerticalOptions="End" WidthRequest="50" HeightRequest="50"/>
    </Grid>
    </ScrollView>
</ContentPage>