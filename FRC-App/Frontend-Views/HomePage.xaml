<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FRC_App.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
                x:Name="DataImport"
                BackgroundColor="#4169E1"
                Text="Import Data" 
                SemanticProperties.Hint="Imports FRC the Data"
                Clicked="ImportData"
                HorizontalOptions="Fill" />
        <Button
                x:Name="DataExport"
                BackgroundColor="#4169E1"
                Text="Export Data" 
                SemanticProperties.Hint="Exports FRC the Data to CSV and otherwise"
                Clicked="ExportData"
                HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>