<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FRC_App.DebuggingPage"
             Title="Debugging Page">
<ScrollView>
    <StackLayout Padding="20" Spacing="20">
        <!-- Button to upload .dsevents file -->
        <Button Text="Upload .dsevents File"
                BackgroundColor="#4A90E2"
                TextColor="White"
                CornerRadius="10"
                Clicked="OnUploadFileClicked" />

        <!-- Label to show the status of parsing -->
        <Label x:Name="ParsingStatusLabel"
               Text=""
               FontSize="Medium"
               TextColor="Black" />
        
        <!-- Display parsed errors and warnings -->
        <Label x:Name="ParsedOutputLabel"
               Text=""
               FontSize="Medium"
               TextColor="Black" />
    </StackLayout>
</ScrollView>
</ContentPage>
