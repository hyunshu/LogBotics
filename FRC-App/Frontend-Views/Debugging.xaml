<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FRC_App.DebuggingPage"
             Title="Debugging Page">

    <ScrollView>
        <VerticalStackLayout Padding="10">
            <!-- Upload Button -->
            <Button Text="Upload .dsevents File"
                    BackgroundColor="#4A90E2"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnUploadFileClicked" />

            <!-- Parsing Status Label -->
            <Label x:Name="ParsingStatusLabel"
                   FontSize="Medium"
                   TextColor="Black"
                   Padding="10"
                   Margin="5,10" />

            <!-- WebView for displaying the parsed output -->
            <WebView x:Name="ResultsWebView"
                     HeightRequest="400"
                     Margin="5,10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>